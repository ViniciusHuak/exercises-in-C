#include <stdio.h>
int somarValores(int v[], int n) {
int soma = 0;
for (int i = 0; i < n; i++) {
soma += v[i];
}
return soma;
}
int main() {
int n, soma;
float media;
printf("Quantos valores deseja inserir? ");
scanf("%d", &n);
int vetor[n];
printf("Digite os valores:\n");
for (int i = 0; i < n; i++) {
scanf("%d", &vetor[i]);
}
soma = somarValores(vetor, n);
media = (float)soma / n;
printf("Soma: %d\n", soma);
printf("MÃ©dia: %.2f\n", media);
return 0;
}
